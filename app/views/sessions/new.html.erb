
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h1><center><span class="label label-default">LOG IN</span></center></h1>
  </div>
</div>
<div class="row" style="margin-top: 20px">
<div class="col-md-6 col-md-offset-3">
	<%= form_for(:session, url: login_path,html: { class: "form"}) do |f| %>
		 <div class="form-group">
              <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
         </div>
		 <div class="form-group">
            	<%= f.password_field :password,class: "form-control input-lg", placeholder: "Password" %>
            </div>
		<%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
	<% end %>
</div>
</div>

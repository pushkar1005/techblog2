<div class="container" style="margin-top:20px">
	<center>
		<% if logged_in? %>
			<% if (@post.user == current_user) || current_user.admin?%>
				<%= link_to "<div class=\"btn btn-primary btn-lg\">Edit Post</div>".html_safe,edit_post_path(@post),target: "_blank" %>
			<% end %>
			<% if current_user.admin? %>
				<!--	<%= link_to "Delete Post",@post,method: :delete, data: { confirm: "Are You Sure"} %> -->
				<%= link_to "<div class=\"btn btn-primary btn-lg\">Delete Post</div>".html_safe,@post,method: :delete, data: { confirm: "Are You Sure"} %>
			<% end %>
		<% end %>
	</center>

</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <h1><center><span class="label label-default">ADD NEW CATEGORY
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for(@category,url: new_category_path,html: { class: "form"}) do |f| %>
			<h1><span class="label label-default">Name</span></h1>
			<div class="form-group">
          		<%= f.text_field :name, class: "form-control input-lg", placeholder: "Name" %>
       		</div>

			<%= f.submit "Create a new Category" , class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
